@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = "Home";
}

<div class="container my-5">
    <h1 class="text-center mb-4">@Localizer["WelcomeTitle"]</h1>

    <div class="row g-4 justify-content-center mt-5">

        <div class="col-12 col-md-4">
            <a asp-controller="Vehicle" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card shadow-lg border-0 text-center h-100 clickable-card">
                    <div class="card-body">
                        <i class="bi bi-car-front-fill text-primary" style="font-size: 3rem;"></i>
                        <h4 class="card-title mt-3">@Localizer["VehiclesListTitle"]</h4>
                        <p class="card-text text-muted">@Localizer["VehiclesListDescription"]</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4">
            <a asp-controller="Customer" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card shadow-lg border-0 text-center h-100 clickable-card">
                    <div class="card-body">
                        <i class="bi bi-people-fill text-success" style="font-size: 3rem;"></i>
                        <h4 class="card-title mt-3">@Localizer["CustomersListTitle"]</h4>
                        <p class="card-text text-muted">@Localizer["CustomersListDescription"]</p>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-md-4">
            <a asp-controller="RentalContract" asp-action="Index" class="text-decoration-none text-dark">
                <div class="card shadow-lg border-0 text-center h-100 clickable-card">
                    <div class="card-body">
                        <i class="bi bi-file-earmark-text-fill text-warning" style="font-size: 3rem;"></i>
                        <h4 class="card-title mt-3">@Localizer["ContractsListTitle"]</h4>
                        <p class="card-text text-muted">@Localizer["ContractsListDescription"]</p>
                    </div>
                </div>
            </a>
        </div>

    </div>
</div>
