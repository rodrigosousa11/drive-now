@model DriveNow.Models.Vehicle
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title_EditVehicle"];
}

<h4 class="mb-4">@Localizer["Title_EditVehicle"]</h4>
<hr />

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Brand" class="form-label">@Localizer["Label_Brand"]</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label">@Localizer["Label_Model"]</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LicensePlate" class="form-label">@Localizer["Label_LicensePlate"]</label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ManufactureYear" class="form-label">@Localizer["Label_ManufactureYear"]</label>
                <input asp-for="ManufactureYear" class="form-control" />
                <span asp-validation-for="ManufactureYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FuelType" class="form-label">@Localizer["Label_FuelType"]</label>
                <select asp-for="FuelType" class="form-control" asp-items="Html.GetEnumSelectList<DriveNow.Models.FuelType>()"></select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">@Localizer["Status"]</label>
                <select asp-for="IsRented" class="form-control">
                    <option value="true">@Localizer["Status_Rented"]</option>
                    <option value="false">@Localizer["Status_Available"]</option>
                </select>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> @Localizer["Button_Save"]
            </button>
            <a asp-action="Index" class="btn btn-outline-dark ms-2">
                <i class="bi bi-arrow-left"></i> @Localizer["Button_BackToList"]
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}