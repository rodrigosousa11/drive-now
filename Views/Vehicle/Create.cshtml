@model DriveNow.Models.Vehicle
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title_CreateVehicle"];
}

<h4 class="mb-4">@Localizer["Header_AddVehicle"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Brand" class="control-label">@Localizer["Label_Brand"]</label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Model" class="control-label">@Localizer["Label_Model"]</label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="LicensePlate" class="control-label">@Localizer["Label_LicensePlate"]</label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="ManufactureYear" class="control-label">@Localizer["Label_ManufactureYear"]</label>
                <input asp-for="ManufactureYear" class="form-control" type="number" min="1900" />
                <span asp-validation-for="ManufactureYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FuelType" class="form-label"></label>
                <select asp-for="FuelType" class="form-select" asp-items="Html.GetEnumSelectList<DriveNow.Models.FuelType>()"></select>
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> @Localizer["Button_Save"]
            </button>
            <a asp-action="Index" class="btn btn-outline-dark">
                <i class="bi bi-arrow-left"></i> @Localizer["Button_BackToList"]
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
