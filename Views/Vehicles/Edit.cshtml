@model DriveNow.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
}

<h4 class="mb-4">Edit Vehicle</h4>
<hr />

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit" novalidate>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Brand" class="form-label"></label>
                <input asp-for="Brand" class="form-control" />
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Model" class="form-label"></label>
                <input asp-for="Model" class="form-control" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LicensePlate" class="form-label"></label>
                <input asp-for="LicensePlate" class="form-control" />
                <span asp-validation-for="LicensePlate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ManufactureYear" class="form-label"></label>
                <input asp-for="ManufactureYear" class="form-control" type="number" min="1900" max="2025" />
                <span asp-validation-for="ManufactureYear" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FuelType" class="form-label"></label>
                <input asp-for="FuelType" class="form-control" />
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>

            <div class="form-check mb-4">
                <input asp-for="IsRented" class="form-check-input" id="IsRented" />
                <label asp-for="IsRented" class="form-check-label"></label>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> Save
            </button>
            <a asp-action="Index" class="btn btn-outline-dark ms-2">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
