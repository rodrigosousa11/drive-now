@model DriveNow.Models.Vehicle

@{
    ViewData["Title"] = "Delete";
}

<div>
    <h4>Are you sure you want to delete this Vehicle?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.Brand)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @Html.DisplayFor(model => model.Brand)
        </dd>

        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @Html.DisplayFor(model => model.Model)
        </dd>

        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.LicensePlate)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @Html.DisplayFor(model => model.LicensePlate)
        </dd>

        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.ManufactureYear)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @Html.DisplayFor(model => model.ManufactureYear)
        </dd>

        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.FuelType)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @Html.DisplayFor(model => model.FuelType)
        </dd>

        <dt class="col-sm-2 fw-normal">
            @Html.DisplayNameFor(model => model.IsRented)
        </dt>
        <dd class="col-sm-10 fw-bold">
            @if (Model.IsRented)
            {
                <span class="badge bg-secondary">Yes</span>
            }
            else
            {
                <span class="badge bg-light text-dark border">No</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-dark ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </form>
</div>
