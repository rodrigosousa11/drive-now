@model DriveNow.Models.RentalContract
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["DetailsTitle"];
}

<div>
    <h4>@Model.Customer.FullName | @Model.Vehicle.LicensePlate</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 fw-normal">@Localizer["CustomerLabel"]</dt>
        <dd class="col-sm-9 fw-bold">@Model.Customer.FullName</dd>

        <dt class="col-sm-3 fw-normal">@Localizer["VehicleLabel"]</dt>
        <dd class="col-sm-9 fw-bold">@Model.Vehicle.LicensePlate</dd>

        <dt class="col-sm-3 fw-normal">@Localizer["StartDateLabel"]</dt>
        <dd class="col-sm-9 fw-bold">@Model.StartDate.ToShortDateString()</dd>

        <dt class="col-sm-3 fw-normal">@Localizer["EndDateLabel"]</dt>
        <dd class="col-sm-9 fw-bold">@Model.EndDate.ToShortDateString()</dd>

        <dt class="col-sm-3 fw-normal">@Localizer["InitialMileageLabel"]</dt>
        <dd class="col-sm-9 fw-bold">@Model.InitialMileage</dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
        <i class="bi bi-pencil"></i> @Localizer["EditButton"]
    </a>
    <a asp-action="Index" class="btn btn-outline-dark">
        <i class="bi bi-arrow-left"></i> @Localizer["BackToListButton"]
    </a>
</div>