@model DriveNow.Models.RentalContract
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["CreateRentalContractTitle"];
}

<h4 class="mb-4">@Localizer["CreateRentalContractHeader"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="CustomerId" class="control-label">@Localizer["CustomerLabel"]</label>
                <select asp-for="CustomerId" asp-items="@(new SelectList(ViewBag.Customers, "Id", "FullName"))" class="form-select"></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="VehicleId" class="control-label">@Localizer["VehicleLabel"]</label>
                <select asp-for="VehicleId" asp-items="@(new SelectList(ViewBag.Vehicles, "Id", "LicensePlate"))" class="form-select"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label">@Localizer["StartDateLabel"]</label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label">@Localizer["EndDateLabel"]</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="InitialMileage" class="control-label">@Localizer["InitialMileageLabel"]</label>
                <input asp-for="InitialMileage" type="number" class="form-control" />
                <span asp-validation-for="InitialMileage" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> @Localizer["SaveButton"]
            </button>
            <a asp-action="Index" class="btn btn-outline-dark">
                <i class="bi bi-arrow-left"></i> @Localizer["BackToListButton"]
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}