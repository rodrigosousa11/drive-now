@model DriveNow.Models.RentalContract
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"];
}

<h4 class="mb-4">@Localizer["Title"]</h4>
<hr />

<div class="row">
    <div class="col-md-6 col-lg-5">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CustomerId" />
            <input type="hidden" asp-for="VehicleId" />
            <input type="hidden" asp-for="StartDate" />
            <input type="hidden" asp-for="InitialMileage" />

            <div class="mb-3">
                <label class="form-label">@Localizer["Customer"]</label>
                <input class="form-control" value="@Model.Customer?.FullName" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer["Vehicle"]</label>
                <input class="form-control" value="@Model.Vehicle?.LicensePlate" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer["StartDate"]</label>
                <input class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="EndDate" class="form-label">@Localizer["EndDate"]</label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">@Localizer["InitialMileage"]</label>
                <input class="form-control" value="@Model.InitialMileage" readonly />
            </div>

            <button type="submit" class="btn btn-success">
                <i class="bi bi-save"></i> @Localizer["Save"]
            </button>
            <a asp-action="Index" class="btn btn-outline-dark ms-2">
                <i class="bi bi-arrow-left"></i> @Localizer["BackToList"]
            </a>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
